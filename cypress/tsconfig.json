{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "types": ["cypress"],  // Cypress-specific types
    "esModuleInterop": true,  // Interoperability between ES modules and CommonJS
    "moduleResolution": "node",  // Node.js-style module resolution
    "resolveJsonModule": true  // Enable importing JSON modules
  },
  "include": [
    "**/*.ts",  // Include Cypress POM and helper files
    "support/commands.js",  // Include support commands if necessary
    "**/*.cy.ts"  // Include all Cypress test files
, "../cypress.config.ts"  ]
}